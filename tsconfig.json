{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@contexts/*": ["contexts/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"]
    },
    "jsx": "react-jsx" // para TypeScript 4.1 o superior
  }
}
